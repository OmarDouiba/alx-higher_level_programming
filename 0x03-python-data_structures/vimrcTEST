" set tabstop and shiftwidth to 8 spaces
set tabstop=8
set shiftwidth=8

" Use tabs, not spaces
set noexpandtab

" Limit line length to 80 characters and display a line at column 81
set colorcolumn=81

" Show existing tabs as '→' and trailing whitespace as '·'
set list listchars=tab:→\ ,trail:·

" Disable automatic indentation based on file type for shell scripts
autocmd FileType sh set noautoindent

" Set comments to start with '#' for shell scripts
autocmd FileType sh set comments=:##,:\#

" Remove trailing whitespace upon saving for shell scripts
autocmd FileType sh autocmd BufWritePre <buffer> :%s/\s\+$//e

" Enable additional powerful features
set wildmenu
set incsearch
set ignorecase
set smartcase
set number
set showcmd
set cursorline

